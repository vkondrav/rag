{
    "openapi": "3.1.0",
    "info": {
      "title": "Title of your API",
      "description": "description of your API",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "url generated by the ngrok container"
      }
    ],
    "paths": {
      "/search": {
        "post": {
          "summary": "Query Weaviate via Flask",
          "description": "Sends a search query to Weaviate through the Flask application",
          "operationId": "searchTextChunks",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "query": {
                      "type": "string",
                      "description": "The search query for Weaviate"
                    }
                  },
                  "required": [
                    "query"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "results": {
                        "type": "string",
                        "description": "The response from the language model"
                      },
                      "TextChunks": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "List of text chunks processed in the query"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Error response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "description": "Error message"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }